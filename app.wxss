/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
#news-list{
  min-height: 600rpx;
  padding: 15rpx;
}

.list-item image{
  width: 230rpx;
  height: 150rpx;
  margin: 10rpx;
}

.list-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid grey;
}

.new-title{
  width: 100%;
  display: block;
  line-height: 60rpx;
  font-size: 10pt;
}