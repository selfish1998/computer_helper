<!-- 滑动新闻图片-->
<swiper indicator-dots="true" autoplay="true" interval="5000" duration="500" bindtap="">
  <block wx:for="{{swiperImg}}" wx:key='swiper{{index}}'>
  <navigator url="{{newsPage}}">
    <swiper-item>
      <image src="{{item.src}}" class="slide-image"></image>
    </swiper-item>
  </navigator> 
  </block>
</swiper>
<!-- 新闻列表-->
<view id='news-list'>
  <view class="list-item" wx:for="{{newsData}}"wx:key="newsData">
    <image src='{{item.poster}}'/>
      <navigator url='../news/news?id={{item.id}}'  >
      <text class="news-titlt" >
      ⚪{{item.title}}——{{item.add_date}}
      </text>
      </navigator>
  </view>
</view>
